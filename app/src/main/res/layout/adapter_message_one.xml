<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:lib="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorLightGreen"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:id="@+id/imgbotavatar"
            android:layout_height="wrap_content"
            android:src="@drawable/bot_face_40_outline">

        </de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bot"
        android:background="@drawable/bot_message_layout"
        android:layout_height="wrap_content">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/dummy_name"
          android:paddingStart="15dp"
          android:paddingEnd="0dp"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:minHeight="50dp"
          android:textColor="@android:color/black"
          android:layout_marginBottom="5dp"
          android:textSize="14sp"
          android:gravity="start"
          android:fontFamily="@font/roboto_regular"
          android:id="@+id/message_receive"

          android:layout_marginEnd="30dp" />
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:weightSum="3"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
android:layout_weight="2"
        android:background="@drawable/user_message_layout"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_regular"
            android:minHeight="50dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:gravity="end"
            android:paddingStart="0dp"
            android:paddingBottom="10dp"
            android:text="@string/dummy_name"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:id="@+id/imgUserAvatar"
            android:src="@drawable/dummy_image">

        </de.hdodenhof.circleimageview.CircleImageView>
    </LinearLayout>

